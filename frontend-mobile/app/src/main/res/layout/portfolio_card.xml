<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="2dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePortfolio"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Project Image" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textPortfolioTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:text="Project Title" />

            <TextView
                android:id="@+id/textPortfolioDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#0077B5"
                android:paddingTop="4dp"
                android:text="October 2024" />

            <TextView
                android:id="@+id/textPortfolioDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the project showing your skills and expertise in this area."
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingTop="8dp"
                android:lineSpacingExtra="4sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/textPortfolioSkill1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill 1"
                    android:textSize="12sp"
                    android:textColor="#0077B5"
                    android:background="#E6F7FF"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textPortfolioSkill2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skill 2"
                    android:textSize="12sp"
                    android:textColor="#0077B5"
                    android:background="#E6F7FF"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Details"
                android:textColor="#0077B5"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>